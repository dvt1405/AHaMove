<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/common_padding"
    android:paddingVertical="@dimen/common_padding">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/anim_list_text_view"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
        app:strokeColor="@color/color_separator"
        app:strokeWidth="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/user_logo"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_padding">

        <TextView
            android:id="@+id/user_name"
            style="@style/TextAppearance.Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/anim_list_text_view" />

        <TextView
            android:id="@+id/user_description"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_small"
            android:background="@drawable/anim_list_text_view" />

        <TextView
            android:id="@+id/follower"
            style="@style/TextAppearance.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/anim_list_text_view" />

        <TextView
            android:id="@+id/user_location"
            style="@style/TextAppearance.Link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/anim_list_text_view"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/user_link"
            style="@style/TextAppearance.Link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/anim_list_text_view"
            android:drawablePadding="@dimen/small_padding" />
    </LinearLayout>

</RelativeLayout>
